<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rel1"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background = "#00000000"
                tools:context="com.scienstechnologies.newsfeed.ShareActivity">

    <TextView
        android:id="@+id/textView"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="Share"
        android:textColor="#616161"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/view1"
        android:layout_below="@+id/textView"
        android:background="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:id="@+id/llIconLayout"
        android:orientation="vertical"
        android:layout_above="@+id/rlClose"
        android:layout_below="@+id/view1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/facebook_icon"/>

            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/twitter_icon"/>

            <ImageView
                android:id="@+id/ivWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/whatsapp_icon"/>

            <ImageView
                android:id="@+id/ivViber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/phone_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/ivEmpty1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/ivCopy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon2"/>

            <ImageView
                android:id="@+id/ivBookmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/bookmark_icon"/>

            <ImageView
                android:id="@+id/ivEMpty2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_margin="4dp"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">


        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ivClose"
            android:src="@drawable/ic_close"/>
    </RelativeLayout>


</RelativeLayout>
